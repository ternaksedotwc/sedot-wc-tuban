---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';

// --- CONFIGURATION ---
const CITY = '[Nama Kota]';

const metadata = {
  title: `Jasa Sedot WC Profesional ${CITY}`,
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Pesan Jasa Sedot WC 24 Jam',
        href: '#contact',
        icon: 'tabler:phone',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: `Jasa Sedot WC ${CITY} Profesional` }}
  >
    <Fragment slot="title">
      Jasa Sedot WC Profesional {CITY}
    </Fragment>

    <Fragment slot="subtitle">
      <span class="block mb-1 font-bold text-blue-600">Solusi Tuntas & Bersih</span>
      Melayani Sedot WC Area {CITY} dan Sekitarnya. Tuntas, Bersih, Bergaransi.
    </Fragment>
  </Hero>

  <!-- Features2 Widget (Why Choose Us) ************** -->

  <Features2
    id="services"
    title="Mengapa Harus Memilih Kami?"
    subtitle="Kami hadir memberikan solusi terbaik untuk masalah sanitasi Anda dengan standar pelayanan tinggi."
    columns={3}
    items={[
      {
        title: 'Tenaga Kerja Berpengalaman',
        description: 'Tim ahli puluhan tahun siap menangani segala masalah WC dengan cepat dan tepat.',
        icon: 'tabler:users',
      },
      {
        title: 'Layanan Terpercaya',
        description: `Sudah melayani ribuan warga ${CITY} dengan tingkat kepuasan tinggi dan reputasi terjamin.`,
        icon: 'tabler:thumb-up',
      },
      {
        title: 'Harga Terjangkau',
        description: 'Penawaran harga yang transparan, kompetitif, dan bisa dinegosiasikan sesuai budget Anda.',
        icon: 'tabler:coin',
      },
      {
        title: 'Teknologi Modern',
        description: 'Didukung mesin vakum berdaya hisap tinggi untuk hasil penyedotan yang maksimal dan efisien.',
        icon: 'tabler:settings',
      },
      {
        title: 'Konsultasi Gratis',
        description: 'Layanan Customer Service ramah yang siap melayani konsultasi dan pemesanan 24 jam nonstop.',
        icon: 'tabler:headset',
      },
      {
        title: 'Pengerjaan Bersih',
        description: 'Jaminan lokasi kembali rapi, bersih, dan higienis tanpa meninggalkan bau tidak sedap.',
        icon: 'tabler:sparkles',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features Widget (Main Advantages) **************** -->

  <Features
    id="about"
    tagline="Keunggulan Utama"
    title="Spesifikasi Layanan Unggulan"
    subtitle="Detail teknis yang menjadikan kami pilihan nomor satu."
    columns={2}
    items={[
      {
        title: 'Harga Terbaik & Bergaransi',
        description: 'Kami memberikan garansi pekerjaan tuntas atau uang kembali, memastikan investasi Anda aman.',
        icon: 'tabler:award',
      },
      {
        title: 'Tenaga Berpengalaman',
        description: 'Teknisi kami tidak hanya ahli, tetapi juga ramah, sopan, dan menjunjung tinggi kejujuran.',
        icon: 'tabler:user-check',
      },
      {
        title: 'Selang Panjang >200m',
        description:
          'Kendala lokasi sulit? Tidak masalah. Selang kami bisa menjangkau lokasi di gang sempit sekalipun.',
        icon: 'tabler:ruler-2',
      },
      {
        title: 'Mesin Berdaya Besar',
        description: 'Proses penyedotan jauh lebih cepat selesai dan tangki septic tank Anda bersih total.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Armada Bersih & Terawat',
        description: 'Truk operasional kami selalu dalam kondisi prima, tidak mogok, dan tidak terlihat jorok.',
        icon: 'tabler:truck',
      },
      {
        title: 'Bongkar Pasang GRATIS',
        description:
          'Kami yang bongkar tutup septic tank dan merapikannya kembali seperti semula tanpa biaya tambahan.',
        icon: 'tabler:hammer',
      },
    ]}
  />
</Layout>
